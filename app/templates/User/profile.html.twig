{% extends '/layout.html.twig' %}

{% block title %}{{ thisUser.getFullname }} - Joind.in{% endblock %}

{% block body %}
    <section class="page-header">
        <div class="row user-profile">
            <div class="col-xs-12">
                <div class="pull-left">
                    <img src="{{ gravatar(thisUser.getGravatarHash, 100) }}">
                </div>
                <div>
                    <h2>{{ thisUser.getFullname }}</h2>
                    <section class="user-details">
                        {% if thisUser.getTwitterUsername %}
                        Twitter: <a href="https://twitter.com/{{ thisUser.getTwitterUsername }}">
                            @{{ thisUser.getTwitterUsername }}</a>
                        {% endif %}
                    </section>
                </div>
            </div>
        </div>
    </section>

    {% set blockCount = 0 %}
    <section class="user-profile-panels">
        <div class="row">
            {% if talks %}
            {% set blockCount = blockCount + 1 %}
            <div class="col-sm-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h2 class="panel-title">{% if moreTalks %}Recent talks{% else %}Talks{% endif %}</h2>
                    </div>
                    <div class="panel-body">
                        {% for talk in talks %}
                            <section>
                                {% set event = attribute(talkEvents, talk.getApiUri) %}
                                <h4><a href="{{ urlFor('talk', {'eventSlug': event.getUrlFriendlyName, 'talkSlug': talk.getUrlFriendlyTalkTitle }) }}">{{ talk.getTitle }}</a></h4>
                                {% if talk.getAverageRating %}
                                    <div class="pull-right rating rating-{{ talk.getAverageRating }}">
                                        <img src="/img/avg-rating-{{ talk.getAverageRating }}.png"
                                             title="Rated {{ talk.getAverageRating }}"
                                            width="132" height="24" alt="Rated {{ talk.getAverageRating }}"/>
                                            {# width/height: 156/28, 132/24, 117/21 #}
                                    </div>
                                {% endif %}
                                <small>
                                    at
                                    <a href="{{ urlFor('event-detail', {'friendly_name': event.getUrlFriendlyName}) }}">{{ event.name }}</a>
                                    <br>
                                    on {{ talk.getStartDateTime|date('j M Y') }}
                                </small>
                            </section>
                        {% endfor %}
                        {# Todo: Implement sub-page for more talks #}
                        {# {% if moreTalks %}
                            <p class="more">More talks by {{ thisUser.getFullname }}</p>
                        {% endif %} #}
                    </div>
                </div>
            </div>
            {% endif %}

            {% if events %}
            {% set blockCount = blockCount + 1 %}
            <div class="col-sm-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h2 class="panel-title">{% if moreEvents %}Recently attended events{% else %}Attended events{% endif %}</h2>
                    </div>
                    <div class="panel-body">
                        {% for event in events %}
                            <section>
                                <h4><a href="{{ urlFor('event-detail', {"friendly_name": event.getUrlFriendlyName}) }}">{{ event.name }}</a></h4>
                                <small>
                                    {% if event.getLocation %}
                                    at
                                    {{ event.getLocation }}</a>
                                    <br>
                                    {% endif %}
                                    on {{ event.getStartDate|date('j M Y') }}
                                    {%  if event.getStartDate|date('M d Y', event.getFullTimezone)
                                            is not sameas(event.getEndDate|date('M d Y', event.getFullTimezone)) %}
                                        &ndash; {{ event.getEndDate|date('M d Y', event.getFullTimezone) }}

                                    {% endif %}
                                </small>
                            </section>
                        {% endfor %}
                        {# Todo: Implement sub-page for more events #}
                        {# {% if moreEvents %}
                            <p class="more">More events attended by {{ thisUser.getFullname }}</p>
                        {% endif %} #}
                    </div>
                </div>
            </div>
            {% endif %}

            {% if talkComments %}
            {% set blockCount = blockCount + 1 %}
            {% if blockCount is not even %}
        </div>
        <div class="row">
            {% endif %}
            <div class="col-sm-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h2 class="panel-title">{% if moreTalkComments %}Recent comments{% else %}Comments{% endif %}</h2>
                    </div>
                    <div class="panel-body">
                        {% for comment in talkComments %}
                            <section>
                                {% set event = attribute(talkEvents, comment.getTalkUri) %}
                                {% set talkSlug = attribute(urlFriendlyTalkTitles, comment.getTalkUri) %}
                                <h4><a href="{{ urlFor('talk', {'eventSlug': event.getUrlFriendlyName, 'talkSlug': talkSlug }) }}">{{ comment.getTalkTitle }}</a></h4>
                                {% if comment.getRating %}
                                    <div class="pull-right rating rating-{{ comment.getRating }}">
                                        <img src="/img/avg-rating-{{ comment.getRating }}.png"
                                             title="Rated {{ comment.getRating }}"
                                            width="132" height="24" alt="Rated {{ comment.getRating }}"/>
                                            {# width/height: 156/28, 132/24, 117/21 #}
                                    </div>
                                {% endif %}
                                <small>
                                    at
                                    <a href="{{ urlFor('event-detail', {'friendly_name': event.getUrlFriendlyName}) }}">{{ event.name }}</a>
                                    <br>
                                    on {{ comment.getCommentDate|date('j M Y') }}
                                </small>
                            </section>
                        {% endfor %}
                        {# Todo: Implement sub-page for more events #}
                        {# {% if moreTalkComments %}
                            <p class="more">More comments by {{ thisUser.getFullname }}</p>
                        {% endif %} #}
                    </div>
                </div>
            </div>
            {% endif %}

            {% if hostedEvents %}
            {% set blockCount = blockCount + 1 %}
            {% if blockCount is not even %}
        </div>
        <div class="row">
            {% endif %}
            <div class="col-sm-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h2 class="panel-title">{% if moreHostedEvents %}Recently hosted events{% else %}Hosted events{% endif %}</h2>
                    </div>
                    <div class="panel-body">
                        {% for event in hostedEvents %}
                            <section>
                                <h4><a href="{{ urlFor('event-detail', {"friendly_name": event.getUrlFriendlyName}) }}">{{ event.name }}</a></h4>
                                <small>
                                    {% if event.getLocation %}
                                    at
                                    {{ event.getLocation }}</a>
                                    <br>
                                    {% endif %}
                                    on {{ event.getStartDate|date('j M Y') }}
                                    {%  if event.getStartDate|date('M d Y', event.getFullTimezone)
                                            is not sameas(event.getEndDate|date('M d Y', event.getFullTimezone)) %}
                                        &ndash; {{ event.getEndDate|date('M d Y', event.getFullTimezone) }}

                                    {% endif %}
                                </small>
                            </section>
                        {% endfor %}
                        {# Todo: Implement sub-page for more hosted events #}
                        {# {% if moreHostedEvents %}
                            <p class="more">More events hosted by {{ thisUser.getFullname }}</p>
                        {% endif %} #}
                    </div>
                </div>
            </div>
            {% endif %}
        </div>
    </section>
{% endblock %}
