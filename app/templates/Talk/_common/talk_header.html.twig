<div class="page-header">
    <div class="row event">
        <div class="col-xs-12 col-sm-12 title">
            <h1>
                {{ talk.getTitle }}
            </h1>
            <div class="row">
                <div class="col-xs-8">
                    {% if talk.getSpeakers %}
                        <h3>
                            {% for speaker in talk.getSpeakers %}
                                {{ speaker.speaker_name }}{% if not loop.last %}, {% endif %}
                            {% endfor %}
                        </h3>
                    {% endif %}
                    <h4>
                        {{ talk.getStartDateTime()|date('l j F Y \\a\\t H:i', event.getFullTimezone) }}
                    </h4>

                    <p>
                        {{ talk.getType }} in {{ talk.language }} at <a href="{{ urlFor('event-schedule', {"friendly_name": event.getUrlFriendlyName}) }}">{{ event.getName }}</a>

                        {% if talk.slidesLink is not empty %}
                        <br>
                        View Slides: <a href="">{{ talk.slidesLink }}</a> <i class="fa fa-external-link-square"></i>
                        {% endif %}
                        <br>
                        Short URL: <a href="{{ shortUrlForTalk(talk.getStub) }}">{{ shortUrlForTalk(talk.getStub) }}</a>
                    </p>
                </div>
                <div class="col-xs-4 text-right">
                    <div style="margin-top: 10px">
                        {% include '_common/rating.html.twig' with {'rating': talk.getAverageRating, 'style': 'vertical'} %}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <nav class="page-nav">
        <ul class="nav nav-pills">
            <li><a href="#">Claim talk</a></li>
        </ul>
    </nav>
    {% if user.username == 'imaadmin' %} {# Temp! - use can_edit when we have that! #}
    <nav class="page-nav admin">
        <ul class="nav nav-pills">
            <li><a href="#">Edit talk</a></li>
            <li><a style="color: #CC0000" href="#">Delete talk</a></li>
        </ul>
    </nav>
    {% endif %}
</div>
