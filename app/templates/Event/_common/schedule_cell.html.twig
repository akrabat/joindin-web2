{% if user %}
<div id="{{ event.getUrlFriendlyName }}/{{ talk.getUrlFriendlyTalkTitle }}">
    <a href="javascript:" class="star{% if talk.starred %} starred{% endif %}">{% if talk.starred %}&#10029;{% else %}&#10025;{% endif %}</a>
</div>
{% endif %}
<p><a href="{{ path_forTalk(event.getUrlFriendlyName, talk.getUrlFriendlyTalkTitle) }}">{{ talk.title }}</a></p>
<p>{% for speaker in talk.speakers %}
    <span class="speaker">
        {% set comma = "" %}
        {% if not loop.last %}
            {% set comma = "," %}
        {% endif %}

        {% if speaker.username %}
            <a href="{{ path_for('user-profile', {'username': speaker.username}) }}">{{ speaker.speaker_name }}</a>{{comma}}
        {% else %}
            {{ speaker.speaker_name }}{{comma}}
        {% endif %}
    </span>
    {% endfor %}
</p>
